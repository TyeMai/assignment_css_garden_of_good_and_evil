<div class='box'>
  <div class='box-title'></div>
  <div class='form'>
    <form action='/garden' method='post'>

      <fieldset>
        <legend>Whats your name?</legend>
        <div>
          <input type='text' id="name" name='name' placeholder="your name here" />
        </div>
      </fieldset>

      <fieldset>
        <legend>Select if you want a good or bad webpage</legend>
        <div>
          <input type='radio' value="good" id='good' name='good_evil' />
          <label for="good">Good</label>
        </div>
        <div>
          <input type='radio' value='bad' id='bad' name='good_evil' />
          <label for="bad">Bad</label>
        </div>
      </fieldset>

      <fieldset>
        <legend>Tell me what your favorite food is</legend>
        <div>
          <input type='text' id="food" name='food' placeholder="your fav food" />
        </div>
      </fieldset>

      <fieldset>
        <legend>Pick a color from the drop down list below</legend>
        <label for='color'>Choose a color</label>
        <select id='color' name='color'>
            <option value=''>--please choose a color--</option>
            <option value='red'>red</option>
            <option value='orange'>orange</option>
            <option value='yellow'>yellow</option>
            <option value='green'>green</option>
            <option value='blue'>blue</option>
            <option value='purple'>purple</option>
        </select>
      </fieldset>

      <fieldset>
        <legend>Move the slider to show me how crazy you want the page to be</legend>
        <label for="insanity-level">How insane do you want to be</label>
        <input type='range' id="insanity-level" name='insanity_level' min='0' max='3' />
      </fieldset>

      <fieldset>
        <legend>Finally submit me</legend>
        <input type='submit' value="submit me" method="post" />
      </fieldset>
    </form>
  </div>
</div>

